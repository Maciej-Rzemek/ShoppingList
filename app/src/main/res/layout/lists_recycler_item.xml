<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/margin_container_right">

        <TextView
            android:id="@+id/shopping_list_name_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_list_item"
            android:layout_marginTop="@dimen/vertical_margin_list_item"
            android:layout_marginEnd="@dimen/recycler_item_vertical_spacing_big"
            android:textSize="26sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/shopping_date_text_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/horizontal_margin_list_item"
            android:layout_marginTop="@dimen/recycler_item_vertical_spacing"
            android:layout_marginBottom="@dimen/vertical_margin_list_item"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/shopping_list_name_text_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/archive_icon_button"
        android:layout_width="@dimen/archive_icon_size"
        android:layout_height="@dimen/archive_icon_size"
        android:src="@drawable/ic_archive_24"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="16dp"
        app:tint="@color/main_green" />

</androidx.cardview.widget.CardView>