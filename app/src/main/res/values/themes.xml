<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ShoppingList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/main_green</item>
        <item name="colorPrimaryVariant">@color/main_green</item>
        <item name="colorOnPrimary">@color/main_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CustomTabStyle" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/main_green</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="CustomTabLayoutStyle">
        <item name="tabGravity">fill</item>
        <item name="tabTextColor">@color/main_green</item>
        <item name="tabIconTint">@color/main_green</item>
        <item name="tabBackground">@color/white</item>
    </style>

    <style name="CustomExtendedFloatingButton" parent="Theme.MaterialComponents">
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerSize">4dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconGravity">end</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/main_green</item>
    </style>
</resources>